/* pages/category/category.wxss */
.cate-aside{
  position: fixed;
  height: 100%;
}
.cate-aside>ul{
  display: flex;
  flex-direction:column;
  justify-content: space-between;
  box-shadow: 0.2rem 0 0.5rem rgba(0,0,0,0.2);
  text-align: center;
  color: #666;
  font-size: 35rpx;
}
.cate-aside>ul>li{
  height: 86rpx;
  line-height: 86rpx;
  width: 170rpx;
  box-sizing: border-box;
}
.cate-aside>ul>li.active{
  background: #fff;
  border-left: 0.2rem solid #ff5777;
  color: #ff5777;
}
.cate-list{
  padding-left: 170rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  text-align: center;
}
.cate-list>view{
  width: 30%;
    margin-top: 2rem;
}
.cate-img{
  width: 130rpx;
  height:130rpx;
}
.cate-txt{
  display: block;
  text-align: center;
  font-size: 30rpx;
  color: #666;
}