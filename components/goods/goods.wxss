/* components/goods/goods.wxss */
.tab-control{
  width: 100%;
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #666;
  font-weight: bold;
  text-align: center;
  background: #fff;
}
 .tab-control-item{
    flex: 1;
  
  }
.tab-active>text{
  color:#ff5777;
  border-bottom: 5rpx  solid #ff5777;
 }
.tab-control-item>text{
  padding: 10rpx;
}



.goods{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 0 10rpx;
  font-size: 28rpx;
  text-align: left;
  color: #666;
}

  .goods-item{
    width: 47.5%;
    margin-top: 30rpx;
    overflow: hidden;
    position: relative;
  }

.img-container{
    position: relative;
    width: 100%;
    height: 0;
    padding-top: 150%;
}
.goods-image{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}
     .fav-icon{
      width: 20rpx;
      height: 20rpx;
      margin: 0 4rpx 0 2rpx;
    }
    .goods-fav {
      font-size: 20rpx;
    }
     .goods-title{
      overflow: hidden;
      text-overflow:ellipsis;
      white-space: nowrap;
      margin-top: 4rpx;
      margin-bottom: 4rpx;
    }
     .goods-price{
      color: #ff5777;
    }
    
    .add{
      position: absolute;
      display: inline-block;
      height: 30rpx;
      width: 30rpx;
      border-radius: 50%;
      right: 20rpx;
      bottom: 0;
    }